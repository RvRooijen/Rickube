{
  "name": "rickube",
  "version": "1.0.0",
  "description": "Visual kubectl management tool built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder --win portable",
    "build:dir": "electron-builder --win --dir",
    "release": "electron-builder --win portable --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "kubernetes",
    "kubectl",
    "electron",
    "dashboard"
  ],
  "author": "Rick",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "electron-updater": "^6.6.2",
    "node-pty": "^1.0.0"
  },
  "build": {
    "appId": "com.rickube.app",
    "productName": "Rickube",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "portable": {
      "artifactName": "Rickube-${version}-portable.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "RvRooijen",
      "repo": "Rickube"
    }
  }
}
